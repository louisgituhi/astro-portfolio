    const response = await fetch("https://api.github.com/repos/louisgituhi/planck/commits?per_page=1")
    const data = await response.json();
   
    const lastCommit = data[0].commit;
    const lastCommitDate = lastCommit.committer.date;
    const lastCommitMessage = lastCommit.message;
    const lastCommitter = lastCommit.committer.name;

    const formatter = new Intl.RelativeTimeFormat("en-US")
    const diff = new Date(lastCommitDate) - new Date();
    const dayDiffs = Math.round(diff / (1000 * 60 * 60 * 24 ))
    const formattedDate = formatter.format(dayDiffs, "days")

    console.log(`${formattedDate}, ${lastCommitMessage}, ${lastCommitter}`)
