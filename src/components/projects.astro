---
import Image from "astro/components/Image.astro";
import DuckDb from "../assets/DuckDB.svg";
import Biome from "../assets/biomejs.svg";
import Bun from "../assets/bun.svg";
import Workers from "../assets/cloudflare-workers.svg";
import Drizzle from "../assets/drizzle-orm_light.svg";
import Hono from "../assets/hono.svg";
import Neon from "../assets/neon.svg";
import Tanstack from "../assets/tanstack.svg";
import Vercel from "../assets/vercel.svg";
import App from "./fetch";
import FuyuCommits from "./fuyu.tsx";
import Statut from "./statut.tsx";
---

<section class=" mt-10 tracking-wide leading-6">
    <h4 class=" text-lg ">Projects</h4>

        <div class=" mt-4">
            <h4 class=" text-md font-semibold">Planck</h4>
            <p class=" text-sm">
                A physicist API endpoint - 
                <span class="flex items-center gap-1">
                    <Image src={ Hono } alt="hono logo" width={14} height={14} /> 
                    <Image src={ Bun } alt="Bun logo" width={18} height={18} />
                    <Image src={ Workers } alt="cloudflare-workers logo" width={18} height={18} />
                        <a href="https://github.com/louisgituhi/planck" 
                            class="underline decoration-wavy cursor-pointer">github</a>, 
                        <a href="https://planck.louisgituhi.workers.dev/" 
                            class="underline decoration-wavy cursor-pointer">link</a>.
                </span>
            </p>
            <span class=" text-xs">
                <App client:load/>
            </span>
        </div>

        <div class=" mt-4">
            <h4 class=" text-md font-semibold">Fuyu</h4>
            <p class=" text-sm">
                A neat webapp to help track your expenses with powerful analytics - 
                <span class="flex items-center gap-1">
                    <Image src={ Neon } alt="neon logo" width={18} height={18} /> 
                    <Image src={ Tanstack } alt="tanstack logo" width={18} height={18} />
                    <Image src={ Bun } alt="Bun logo" width={20} height={20} />
				<Image src={ Vercel } alt="Vercel logo" width={18} height={18} />
				<Image src={Drizzle} alt="drizzle logo" width={30} height={30} />
<Image src={Biome} alt="biome logo" width={ 18 } height={18} />
                    <a href="https://github.com/louisgituhi/fuyu"
                        class="underline decoration-wavy cursor-pointer">github</a>, 
                    <a href="https://fuyu-eta.vercel.app/" 
                        class="underline decoration-wavy cursor-pointer">link</a>.
                </span>
		</p>
		<span class="text-xs">
			<FuyuCommits client:load />
		</span>
	</div>
	<div class="mt-4">
		<h4 class="text-md font-semibold">Statut</h4>
		<p class=" text-sm">
			A monitor for your API, routes and pages - 
			<span class=" flex items-center gap-1">
				<Image src={ Neon } alt = "neon logo" width={18} height={18} />
				<Image src={ Tanstack } alt="tanstack logo" width = {18} height={18} />
				<Image src={ Bun } alt="Bun logo" width={ 20 } height={ 20 } />
				<Image src={ DuckDb } alt ="Duck db logo" width={ 64 } height={ 64 } />
				<svg width="20" height="20" viewBox="0 0 109 95" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M32.569 38.1914L54.5301 0.158447L108.956 94.4175H0.104248L22.0654 56.3834L37.6003 65.3517L31.1753 76.4795H77.885L54.5301 36.0332L48.1051 47.1609L32.569 38.1914Z" fill="url(#paint0_linear_173_9378)"/>
						<defs>
							<linearGradient id="paint0_linear_173_9378" x1="88.2367" y1="94.4175" x2="87.2207" y2="27.8737" gradientUnits="userSpaceOnUse">
							<stop stop-color="#41FF54"/>
							<stop offset="1" stop-color="#E7FF52"/>
							</linearGradient>
							</defs>
				</svg>
				<Image src={ Drizzle } alt="drizzle logo" height={32} width={ 32} />
<Image src={Biome} alt="biome logo" width={ 18 } height={18} />
<a href="https://github.com/louisgituhi/statut"
class=" underline decoration-wavy cursor-pointer">github</a>
			</span>
		</p>
		<span class="text-xs">
<Statut client:load />
		</span>
	</div>
</section>
